<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".PlayerActivity">

  <ImageView
      android:id="@+id/iv_poster_details"
      android:layout_width="404dp"
      android:layout_height="420dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/image" />

  <TextView
      android:id="@+id/tv_title_details"
      style="@style/StyleMusicTextViewDetails"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="106dp"
      android:layout_marginTop="408dp"
      android:layout_marginEnd="104dp"
      android:fontFamily="@font/lexend_regular"
      android:text="Bank Account"
      android:textColor="@color/white"
      android:textSize="24dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.487"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/tv_author"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="145dp"
      android:layout_marginTop="5dp"
      android:layout_marginEnd="143dp"
      android:fontFamily="@font/lexend_light"
      android:text="21 Savage"
      android:textColor="@color/white"
      android:textSize="18sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tv_title_details" />

  <ImageView
      android:id="@+id/iv_favorite"
      android:layout_width="111dp"
      android:layout_height="97dp"
      android:layout_marginStart="175dp"
      android:layout_marginTop="468dp"
      android:layout_marginEnd="174dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.51"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/heart" />

  <TextView
      android:id="@+id/tv_current_progress"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="18dp"
      android:fontFamily="@font/lexend_light"
      android:text="0:00"
      android:textColor="@color/white"
      android:textSize="12dp"
      app:layout_constraintBottom_toBottomOf="@+id/iv_play"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/iv_back"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/iv_play" />

  <TextView
      android:id="@+id/tv_last_progress"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="12dp"
      android:fontFamily="@font/lexend_light"
      android:text="3:34"
      android:textColor="@color/white"
      app:layout_constraintBottom_toBottomOf="@+id/iv_play"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/iv_forward"
      app:layout_constraintTop_toTopOf="@+id/iv_play" />

  <SeekBar
      android:id="@+id/sb_musoc_progress"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="16dp"
      android:layout_marginTop="580dp"
      android:progress="50"
      android:progressTint="@color/white"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/iv_back"
      android:layout_width="44dp"
      android:layout_height="40dp"
      app:layout_constraintBottom_toBottomOf="@+id/iv_play"
      app:layout_constraintEnd_toStartOf="@+id/iv_play"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/tv_current_progress"
      app:layout_constraintTop_toTopOf="@+id/iv_play"
      app:srcCompat="@drawable/img_3" />

  <ImageView
      android:id="@+id/iv_play"
      android:layout_width="49dp"
      android:layout_height="48dp"
      android:layout_marginTop="33dp"
      app:layout_constraintEnd_toStartOf="@+id/iv_forward"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/iv_back"
      app:layout_constraintTop_toTopOf="@+id/sb_musoc_progress"
      app:srcCompat="@drawable/img_4" />

  <ImageView
      android:id="@+id/iv_forward"
      android:layout_width="43dp"
      android:layout_height="40dp"
      app:layout_constraintBottom_toBottomOf="@+id/iv_play"
      app:layout_constraintEnd_toStartOf="@+id/tv_last_progress"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/iv_play"
      app:layout_constraintTop_toTopOf="@+id/iv_play"
      app:srcCompat="@drawable/img_5" />
</androidx.constraintlayout.widget.ConstraintLayout>
